{
  "manifest_version": 3,
  "name": "Smart Focus Assistant",
  "version": "1.0.0",
  "description": "AI-powered focus and productivity tool for students and professionals",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "webNavigation",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "analytics.html", "settings.html", "sites.html"],
      "matches": ["<all_urls>"]
    }
  ]
}